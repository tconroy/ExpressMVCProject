form#form-register.form-horizontal(role='form' action='/register' method='POST')
  .form-group
    label.col-sm-2.control-label(for='email') Email
    .col-sm-10
      input#email.form-control(type='email', name='email', placeholder='Email' required='true')
  .form-group
    label.col-sm-2.control-label(for='username') Username
    .col-sm-10
      input#username.form-control(type='text', name='username', placeholder='Username', required='true')
  .form-group
    label.col-sm-2.control-label(for='password') Password
    .col-sm-10
      input#password.form-control(type='password', name='password', placeholder='Password', required='true')
  .form-group
    .col-sm-10.col-sm-offset-2
      input#password2.form-control(type='password', name='password2' placeholder='Confirm Password', required='true')
  .form-group
    .col-sm-offset-2.col-sm-10
      button#registerBtn.btn.btn-default(type='submit') Register
